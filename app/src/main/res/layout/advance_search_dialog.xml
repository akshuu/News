<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
            >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Begin date"
        android:id="@+id/txtBegin"
        android:textColor="@android:color/primary_text_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtDate"
        android:layout_alignBottom="@+id/txtBegin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sort order"
        android:textColor="@android:color/primary_text_light"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtBegin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignLeft="@+id/txtBegin"
        android:layout_alignStart="@+id/txtBegin"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/txtDate"
        android:layout_above="@+id/chkArts"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/chkArts"
        android:layout_alignStart="@+id/chkArts"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="News desk values"
        android:textColor="@android:color/primary_text_light"
        android:scrollHorizontally="false"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/txtBegin"
        android:layout_alignEnd="@+id/txtBegin"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arts"
        android:id="@+id/chkArts"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fashion &amp; Style"
        android:id="@+id/chkFashion"
        android:layout_below="@+id/chkArts"
        android:layout_alignLeft="@+id/chkArts"
        android:layout_alignStart="@+id/chkArts"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:id="@+id/chkSports"
        android:layout_below="@+id/chkFashion"
        android:layout_alignLeft="@+id/chkFashion"
        android:layout_alignStart="@+id/chkFashion"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/chkSports"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>